# snapshot & restore
PUT /_snapshot/nycpd_accidents_backup
{
          "type": "fs",
                "settings": {
                              "location": "/tmp/nycpd_accidents_backup",
                                        "compress": "true"
                                              }
}
# list snapshots
GET /_snapshot/_all
# make backup
PUT /_snapshot/nycpd_accidents_backup/nycpd-20150911?wait_for_completion=true 
{
      "indices": "nycpd",
        "ignore_unavailable": "true",
          "include_global_state": false
}
# delete snapshot
DELETE /_snapshot/nycpd_accidents_backup/snapshot_1
# restore snapshot
POST /_snapshot/nycpd_accidents_backup/nycpd-20150911/_restore


